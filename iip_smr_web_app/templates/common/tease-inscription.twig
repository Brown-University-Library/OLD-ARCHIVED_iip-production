{% load iipCustomFilters %}

<!-- TEMP comment start of inscription data -->
<script type="text/javascript">
    inscription_list.push("{{inscription.inscription_id}}");
</script>


<div class="flex flex-center justify-start w-full my-2" id="{{inscription.inscription_id}}">
    <a href="../viewinscr/{{inscription.inscription_id}}" class="w-1/6 pr-1 flex-shrink-0">
        <img src="https://github.com/Brown-University-Library/iip-images/raw/master/{{inscription.inscription_id}}.jpg"  onerror="ImgError(this)" class="w-24 h-24 object-cover">
        <!--a class="" href="{% url 'xml_url' inscription.inscription_id %}">[View in XML]</a-->
    </a>

    <a href="../viewinscr/{{inscription.inscription_id}}" class="w-1/6 px-1 flex-shrink-0">
      {{inscription.inscription_id|upper}} {{inscription.short_description}}
    </a>

    <div class="w-1/6 px-1 flex-shrink-0">
        {% if inscription.language_display|length > 0 and inscription.language|length > 0 %}
        {% endif %}
        {% if inscription.language_display %}
            {% for l in inscription.language_display %}
                {{l}}
                {% if not forloop.last %},&nbsp;
                {% endif %}
            {% endfor %}
        {% elif inscription.language %}
            {% for l in inscription.language %}
                {{l}}
                {% if not forloop.last %},&nbsp;
                {% endif %}
            {% endfor %}
        {% else %}
        Not available
        {% endif %}<br>
    </div>

    <div class="w-1/6 px-1 flex-shrink-0">
      {% if inscription.notBefore %}
          {{inscription.notBefore|cleanDates}} to {{inscription.notAfter|cleanDates}}
      {% else %}
      Not Available
      {% endif %} <br>
    </div>

        <!--span >Dimension:</span>
        {% if inscription.dimensions %}
        {{inscription.dimensions}}
        {% else %}
        Not Available
      {% endif %}<br-->

    <!-- transcription cell -->
    <div class="w-1/6 px-1 flex-shrink-0">
    </div>

    <!-- translation cell -->
    <div class="w-1/6 pl-1 flex-shrink-0">
        {% comment %}
        {% if inscription.translation %}
            {{inscription.translation|truncatewords_html:25}}
        {% else %}
            [no translation]
        {% endif %}
        {% endcomment %}
    </div>


    <!-- map cell -->
    <!--div class="">
        <div id="maplet{{inscription.inscription_id}} w-24 h-24" ></div>
    </div-->

</div> <!-- end of <div class="single_inscription_stuff"> -->

<!-- TEMP comment  end of inscription data -->
